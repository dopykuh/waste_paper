<p id="notice"><%= notice %></p>

<h1>Sources</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>User</th>
      <th>Password</th>
      <th>Port</th>
      <th>Authentication</th>
      <th>Ssl</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sources.each do |source| %>
      <tr>
        <td><%= source.address %></td>
        <td><%= source.user %></td>
        <td><%= source.password %></td>
        <td><%= source.port %></td>
        <td><%= source.authentication %></td>
        <td><%= source.ssl %></td>
        <td><%= source.user %></td>
        <td><%= link_to 'Show', source %></td>
        <td><%= link_to 'Edit', edit_source_path(source) %></td>
        <td><%= link_to 'Destroy', source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

